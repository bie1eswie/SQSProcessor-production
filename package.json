{
  "name": "sls-ts-aws",
  "private": true,
  "version": "1.0.0",
  "description": "A minimal example of Node 18 + TypeScript + Serverless Framework + AWS",
  "scripts": {
    "test": "glob -c \"node --loader tsx --test\" \"./src/**/*.test.ts\"",
    "invoke:Function1": "sls invoke local -f Function1 -s dev",
    "start:api": "serverless offline -s dev",
    "deploy:dev": "sls deploy -s dev",
    "lint": "eslint --ext .ts --fix .",
    "prettier": "prettier --write --ignore-unknown .",
    "prepare": "husky install",
    "build": "tsc --noemit"
  },
  "devDependencies": {
    "@serverless/typescript": "^3.30.1",
    "@types/aws-lambda": "^8.10.119",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "esbuild": "^0.17.19",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "glob": "^10.3.3",
    "husky": "^8.0.0",
    "prettier": "^3.0.2",
    "serverless": "^3.34.0",
    "serverless-esbuild": "^1.46.0",
    "serverless-offline": "^12.0.4",
    "serverless-plugin-typescript": "^2.1.5",
    "tsx": "^3.12.7",
    "typescript": "^5.5.2"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.3",
    "@vercel/node": "^3.1.7",
    "axios": "^1.7.2",
    "class-sanitizer": "^1.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.0.2",
    "reflect-metadata": "^0.2.2",
    "winston": "^3.13.0"
  }
}
